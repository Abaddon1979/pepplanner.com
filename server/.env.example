# Pepplanner Backend Environment Variables
# Copy this file to .env and fill in your values

# PostgreSQL Database Connection
DATABASE_URL=postgresql://username:password@localhost:5432/pepplanner
# OR use individual settings:
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=pepplanner
# PGUSER=your_username
# PGPASSWORD=your_password

# Discourse SSO Configuration
DISCOURSE_URL=https://your-discourse-site.com
DISCOURSE_SSO_SECRET=your_sso_secret_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS - Your React app URL
CORS_ORIGIN=http://localhost:5173
